@using InventoryFrontEnd.Models;
@model Modelall
@{

    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/With_Side_Bar.cshtml";

}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .hover-scale:hover {
            transform: scale(1.05);
            transition: transform 0.2s ease-in-out;
        }
    </style>
</head>
<body class="mt-3">

    <div class="col-md-9 h-100">
        <div class="sticky-xl-top">
            <div class="card overflow-y-auto">
                <div class="card-body mt-3">
                    <h2 id="room-label" class="text-center">@ViewBag.campus_name </h2>
                    <h1 class="text-center">DASHBOARD</h1>
                    @if (Session["UserRole"] == null || Session["UserRole"].ToString() != "Apparel Incharge")
                    {
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Item List</h5>
                                        @foreach (var item in Model.AllITassetcounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("Item_list", "Inventory", new { campus_name = ViewBag.campus_name })" class="btn btn-success d-block mx-auto hover">View</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">All rooms</h5>
                                        @foreach (var item in Model.Allroomcounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("rooms", "Inventory", new { campus_name = ViewBag.campus_name })" class="btn btn-success d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">All Employee</h5>
                                        @foreach (var item in Model.Allemployeecounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("employeelist", "Inventory", new { campus_name = ViewBag.campus_name })" class="btn btn-success d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Asset Logs</h5>
                                        @foreach (var item in Model.Alllogscounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("itemlogs", "Inventory", new { campus_name = ViewBag.campus_name })" class="btn btn-success d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Brand List</h5>
                                        @foreach (var item in Model.Allbrandcounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("brandlist", "Inventory", new { campus_name = ViewBag.campus_name })" class="btn btn-success d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }

                    @if (Session["UserRole"] == null || Session["UserRole"].ToString() != "IT Asset Incharge")
                    {
                        <h1 class="text-center">Apparel List</h1>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">APPAREL AVAILABLE</h5>
                                        @foreach (var item in Model.AllApparelavailablecounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("Apparel_stock", "Apparel", new { campus_name = ViewBag.campus_name })" class="btn btn-primary d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Grade List</h5>
                                        @foreach (var item in Model.AllGradecounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("grade_list", "Apparel", new { campus_name = ViewBag.campus_name })" class="btn btn-primary d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Size List</h5>
                                        @foreach (var item in Model.AllSizecounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("size_list", "Apparel", new { campus_name = ViewBag.campus_name })" class="btn btn-primary d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Claim Apparel List</h5>
                                        @foreach (var item in Model.Allclaimcounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("Claim_stub", "Apparel", new { campus_name = ViewBag.campus_name })" class="btn btn-primary d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">All Apparel Type</h5>
                                        @foreach (var item in Model.Allappareltypecounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("Appareltype_list", "Apparel", new { campus_name = ViewBag.campus_name })" class="btn btn-primary d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Apparel Record list</h5>
                                        @foreach (var item in Model.Allapparelrecordcounters)
                                        {
                                            <h1 class="text-center">@Html.DisplayFor(modelItem => item.Counter)</h1>
                                        }
                                        <a href="@Url.Action("employeelist", "Inventory", new { campus_name = ViewBag.campus_name })" class="btn btn-primary d-block mx-auto">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

   
   




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>