@using InventoryFrontEnd.Models;
@model Modelall

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="vh-100 vw-100">
    <div class="container">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top" style="padding: 5px; font-size: 18px;">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">
                            <img src="~/Content/gsc-logo-header.png" alt="Your Logo" height="50" class="d-inline-block align-top">
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link hover-scale-2" href="@Url.Action("Campus", "Inventory", new { campus_name = ViewBag.campus_name })">Campus</a>
                                </li>

                                

                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Profile")">Profile</a>
                                </li>
                            </ul>
                            <form class="d-flex" role="search">
                                <a class="nav-link" href="@Url.Action("logout", "dashboard")">Log-out</a>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>
        </nav>
    </div>


   


    <script>
        // Function to check session status at regular intervals
        function checkSessionStatus() {
            $.ajax({
                url: '/Account/CheckSession', // Endpoint to check session status
                success: function (response) {
                    // Session is still active
                },
                error: function (xhr, status, error) {
                    if (xhr.status == 401) { // Unauthorized (session expired)
                        // Perform logout action
                        window.location.href = '/dashboard/logout'; // Redirect to logout endpoint
                    }
                }
            });
        }

        // Check session status every 5 minutes (adjust as needed)
        setInterval(checkSessionStatus, 300000); // 5 minutes in milliseconds
    </script>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
